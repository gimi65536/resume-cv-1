\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{NotoSansTC_external}[2023/03/06 NotoSansTC_external Package]

\RequirePackage{fontspec}
\RequirePackage{xeCJK}

% https://github.com/boathit/CTEX/blob/master/texmf/tex/latex/ctex/fontset/ctex-xecjk-adobefonts.def
% ctex-xecjk-adobefonts.def: Adobe 的 xeCJK 字体设置，为 Adobe 的四套字体
% vim:ft=tex

\defaultfontfeatures{Path = fonts/NotoSansTC/, Mapping=tex-text}

\setCJKmainfont[
BoldFont=NotoSansTC-Bold.otf,
ItalicFont=NotoSansTC-Regular.otf,
SmallCapsFont=NotoSansTC-Bold.otf
]{NotoSansTC-Regular.otf}
\setCJKsansfont{NotoSansTC-Bold.otf}
\setCJKmonofont{NotoSansTC-Regular.otf}

\setCJKfamilyfont{zhsong}{NotoSansTC-Regular.otf}
\setCJKfamilyfont{zhhei}{NotoSansTC-Bold.otf}
\setCJKfamilyfont{zhfs}{NotoSansTC-Regular.otf}
\setCJKfamilyfont{zhkai}{NotoSansTC-Regular.otf}

\newcommand*{\songti}{\CJKfamily{zhsong}} % 宋体
\newcommand*{\heiti}{\CJKfamily{zhhei}}   % 黑体
\newcommand*{\kaishu}{\CJKfamily{zhkai}}  % 楷书
\newcommand*{\fangsong}{\CJKfamily{zhfs}} % 仿宋

\endinput
